# ConvoTravelInsure Environment Variables

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/convo_travel_insure

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Groq API (REQUIRED for LLM features)
GROQ_API_KEY=your-groq-api-key-here

# Stripe (optional for now)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# LLM Configuration
MODEL_NAME=llama3-8b-8192
EMBEDDING_MODEL=text-embedding-3-small

# Vector Store
VECTOR_DIMENSION=1536

# Application
DEBUG=True
ENVIRONMENT=development

# Checkpointing (optional - defaults to c:/tmp)
CHECKPOINT_DIR=c:/tmp
